%section#product.container-fluid
  .panel.panel-default.panel-card
    .panel-body
      .row
        .col-xs-12.col-sm-6
          - if @product.sold?
            %span.label.label-danger.sold Sold
          = render 'products/show/slide'
        .col-xs-12.col-sm-6
          %h3= @product.name
          = render 'edit_link' if admin_signed_in?
          %h4
            .label.label-danger= "#{@product.price} $"
            - unless @product.status.blank?
              .label.label-info.status-label= @product.status
          %br
          %table.table
            %tbody
              - @product.fields.each do |att|
                %tr
                  %td
                    %strong= att.name
                  %td= att.value
          %p= raw @product.description
  = render 'products/show/related'
