.container
  .row
    .col-xs-12.col-sm-6.col-sm-push-3.col-md-4.col-md-push-4
      .panel.panel-default
        .panel-heading
          %h3.panel-title
            %strong Log in
        .panel-body
          = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .form-group
              = f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' }
            .form-group
              = f.input :password, required: false, input_html: { class: 'form-control' }
            .form-group
              = f.button :submit, "Log in", class: 'btn btn-sm btn-default'