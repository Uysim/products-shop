%section#products.container
  .row
    .col-xs-12.text-center
      %h1
        %strong= "Result for #{params[:search].try(:[], 'query')}"
    .col-xs-12.text-center
      = pagination_links @products
    - @products.each do |product|
      = render 'shared/product', product: product
    .col-xs-12.text-center
      = pagination_links @products