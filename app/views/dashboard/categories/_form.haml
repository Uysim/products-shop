= simple_form_for(@category, url: @category.new_record? ? admin_categories_url : admin_category_url(@category)) do |f|
  = f.error_notification
  .form-group
    = f.input :name, input_html: { class: 'form-control'}
  .form-group
    = f.input :description, input_html: { class: 'form-control editable', rows: '30'}
  .form-group
    = f.input :content_position, collection: ['Hidden', 'Bottom', 'Top'], input_html: { class: 'form-control'}, prompt: 'Please select content position'
  .form-group
    = render 'change_parent', f: f unless @category.new_record?
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
