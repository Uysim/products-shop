.form-group
  .col-xs-12
    %br
    %button.btn.btn-default{type: 'button', 'data-toggle'=>'collapse', 'data-target'=>'#category-association', onclick: "$(this).hide();"} Change Category
    #category-association.collapse
      .row.radio-row
        - @main_categories.each do |mc|
          .col-xs-12.col-sm-6.col-md-3.col-main
            %ul
              %li
                = f.radio_button :category_id, mc.id
                = f.label mc.name
              = render 'radio_categories', categories: mc.subcategories, f: f if mc.subcategories.any?

