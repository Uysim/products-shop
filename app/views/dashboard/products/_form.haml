= simple_form_for([:admin, @category, @product]) do |f|
  = f.error_notification
  = f.input :category_id, as: :hidden, input_html: { value: params[:category_id] }
  .form-group
    = f.input :name, input_html: { class: 'form-control' }
  .form-group
    = f.input :price, input_html: { class: 'form-control' }
  .form-group
    = f.input :description, input_html: { class: 'form-control editable', rows: '30' }


  .form-group
    = f.input :summary, input_html: { class: 'form-control' }
  .form-group
    = f.simple_fields_for :images do |i|
      = i.input :file

  .form-group
    .col-xs-5
      Name
    .col-xs-5
      Value
    .col-xs-2
    #fields
      = f.simple_fields_for :fields do |field|
        = render 'field_fields', f: field
      .col-xs-12
        %br
        = link_to_add_association 'Add field', f, :fields, class: 'btn btn-primary'
  - if params[:action]=='edit'
    .form-group
      .col-xs-12
        %br
        %button.btn.btn-default{type: 'button', 'data-toggle'=>'collapse', 'data-target'=>'#category-association', onclick: "$(this).hide();"} Change Category
        #category-association.collapse
          %ul.nav.nav-tabs
            - @main_categories.each_with_index do |mc, index|
              %li{ class: index.zero? ? "active" : nil }
                = link_to mc.name, "#category-#{mc.id}", "data-toggle" => "tab"
          .tab-content
            - @main_categories.each_with_index do |mc ,index|
              .tab-pane.fade{ class: index.zero? ? "active in" : nil, id: "category-#{mc.id}" }
                = f.association :category, collection: mc.subcategories,label: false, as: :radio_buttons
                = f.radio_button :category_id, mc.id
                = f.label :other

  .form-group
    .col-xs-12
      = f.input :sold
  .form-group
    .col-xs-12
      = f.input :feature
  .form-group
    .col-xs-12
      %br
      %br
      = f.button :submit, class: 'btn btn-primary'

